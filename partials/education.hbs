{{#if resume.education.length}}
  <section id="education">
    <h3>Education</h3>
    <div class="stack">
      {{#each resume.education}}
        <article>
          <header>
            <div class="spaced-list">
              <h4>{{institution}}</h4>
              {{#if startDate}}
                <span>
                  <time datetime="{{startDate}}">{{formatDate startDate}}</time> â€“
                  {{#if endDate}}<time datetime="{{endDate}}">{{formatDate endDate}}</time>{{else}}Present{{/if}}
                </span>
              {{/if}}
            </div>
            <div class="spaced-list">
              <em>
                {{#studyType}}
                  {{{.}}}
                {{/studyType}}
                of
                {{#area}}
                    {{.}}
                {{/area}}
              </em>
              {{#url}}
                <a href="{{.}}">{{formatURL .}}</a>
              {{/url}}
            </div>
          </header>
          {{#if courses.length}}
            <p>Courses:</p>
            <ul>
              {{#courses}}
                <li>{{.}}</li>
              {{/courses}}
            </ul>
          {{/if}}
        </article>
      {{/each}}
    </div>
  </section>
{{/if}}
